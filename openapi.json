  "components": {
    "schemas": {
      "CreateDriverRequest": {
        "type": "object",
        "required": [
          "firstname",
          "lastname",
          "email",
          "password",
          "language"
        ],
        "properties": {
          "email": {
            "type": "string"
          },
          "firstname": {
            "type": "string"
          },
          "gender": {
            "type": [
              "string",
              "null"
            ]
          },
          "language": {
            "$ref": "#/components/schemas/DriverLanguage"
          },
          "lastname": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "CreateDriverResponse": {
        "type": "object",
        "required": [
          "access_token"
        ],
        "properties": {
          "access_token": {
            "type": "string"
          }
        }
      },
      "CreateDriverRestPeriodRequest": {
        "type": "object",
        "required": [
          "start",
          "end",
          "rest"
        ],
        "properties": {
          "end": {
            "type": "string"
          },
          "rest": {
            "type": "string"
          },
          "start": {
            "type": "string"
          }
        }
      },
      "CreateDriverRestPeriodsRequest": {
        "type": "object",
        "required": [
          "rest_periods"
        ],
        "properties": {
          "rest_periods": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CreateDriverRestPeriodRequest"
            }
          }
        }
      },
      "CreateWorkdayRequest": {
        "type": "object",
        "required": [
          "date",
          "start_time",
          "rest_time",
          "overnight_rest"
        ],
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "end_time": {
            "type": [
              "string",
              "null"
            ]
          },
          "overnight_rest": {
            "type": "boolean"
          },
          "rest_time": {
            "type": "string"
          },
          "start_time": {
            "type": "string"
          }
        }
      },
      "DriverLanguage": {
        "type": "string",
        "enum": [
          "fr",
          "en"
        ]
      },
      "DriverRestPeriod": {
        "type": "object",
        "required": [
          "start",
          "end",
          "rest"
        ],
        "properties": {
          "end": {
            "type": "string"
          },
          "rest": {
            "type": "string"
          },
          "start": {
            "type": "string"
          }
        }
      },
      "ErrorBody": {
        "type": "object",
        "required": [
          "message",
          "error_code",
          "status"
        ],
        "properties": {
          "content": {},
          "error_code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "minimum": 0
          }
        }
      },
      "LoginDriverRequest": {
        "type": "object",
        "required": [
          "email",
          "password"
        ],
        "properties": {
