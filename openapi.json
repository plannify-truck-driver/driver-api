  "paths": {
    "/driver/authentication/login": {
      "post": {
        "tags": [
          "authentication"
        ],
        "operationId": "login",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginDriverRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Driver logged in successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateDriverResponse"
                }
              }
            }
          },
          "401": {
            "description": "Invalid credentials",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorBody"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorBody"
                }
              }
            }
          }
        },
        "security": []
      }
    },
    "/driver/authentication/signup": {
      "post": {
        "tags": [
          "authentication"
        ],
        "operationId": "signup",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateDriverRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Driver signed up successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateDriverResponse"
                }
              }
            }
          },
          "400": {
            "description": "Email domain denylisted",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorBody"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorBody"
                }
              }
            }
          }
        },
        "security": []
      }
    },
    "/driver/workdays": {
      "get": {
        "tags": [
          "workdays"
        ],
        "description": "Retrieve workdays for a specific period with pagination",
        "operationId": "get_all_period",
        "parameters": [
          {
            "name": "from",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "to",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "page",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32",
              "minimum": 0
            }
          },
          {
            "name": "limit",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32",
              "minimum": 0
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Period workdays retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PaginatedResponse_Workday"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorBody"
                }
              }
            }
          }
        },
        "security": [
          {
            "bearer_auth": []
          }
        ]
      },
      "put": {
        "tags": [
          "workdays"
        ],
        "description": "Update an existing workday",
        "operationId": "update_workday",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateWorkdayRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Workday updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Workday"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorBody"
                }
              }
            }
          }
        },
        "security": [
          {
            "bearer_auth": []
          }
        ]
      },
      "post": {
        "tags": [
          "workdays"
        ],
        "description": "Create a new workday",
        "operationId": "create_workday",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateWorkdayRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Workday created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Workday"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorBody"
                }
              }
            }
          }
        },
        "security": [
          {
            "bearer_auth": []
          }
        ]
      }
    },
    "/driver/workdays/documents/year": {
      "get": {
        "tags": [
          "workdays/documents"
        ],
        "description": "Retrieve years with workday documents",
        "operationId": "get_workday_documents",
        "responses": {
          "200": {
            "description": "Workday document years retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "integer",
                    "format": "int32"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorBody"
                }
              }
            }
          }
        },
        "security": [
          {
            "bearer_auth": []
          }
        ]
      }
    },
    "/driver/workdays/documents/{year}": {
      "get": {
        "tags": [
          "workdays/documents"
        ],
        "description": "Retrieve months with workday documents for a specific year",
        "operationId": "get_workday_documents_by_year",
        "parameters": [
          {
            "name": "year",
            "in": "path",
            "description": "The year of the workday documents to retrieve",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Workday document months retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "integer",
                    "format": "int32"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorBody"
                }
              }
            }
          }
        },
        "security": [
          {
            "bearer_auth": []
          }
        ]
      }
    },
    "/driver/workdays/month": {
      "get": {
        "tags": [
          "workdays"
        ],
        "description": "Retrieve workdays for a specific month and year",
        "operationId": "get_all_month",
        "parameters": [
          {
            "name": "month",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "year",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Monthly workdays retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Workday"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorBody"
                }
              }
            }
          }
        },
        "security": [
          {
            "bearer_auth": []
          }
        ]
      }
    },
    "/driver/workdays/{date}": {
      "delete": {
        "tags": [
          "workdays"
        ],
        "description": "Delete a workday by date",
        "operationId": "delete_workday",
        "parameters": [
          {
            "name": "date",
            "in": "path",
            "description": "The date of the workday to delete",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Workday deleted successfully"
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorBody"
                }
              }
            }
          }
        },
        "security": [
          {
            "bearer_auth": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "CreateDriverRequest": {
        "type": "object",
        "required": [
          "firstname",
          "lastname",
          "email",
          "password",
          "language"
        ],
        "properties": {
          "email": {
            "type": "string"
          },
          "firstname": {
            "type": "string"
          },
          "gender": {
            "type": [
              "string",
              "null"
            ]
          },
          "language": {
            "type": "string"
          },
          "lastname": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "CreateDriverResponse": {
        "type": "object",
        "required": [
          "access_token"
        ],
        "properties": {
          "access_token": {
            "type": "string"
          }
        }
      },
      "CreateWorkdayRequest": {
        "type": "object",
        "required": [
          "date",
          "start_time",
          "rest_time",
          "overnight_rest"
        ],
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "end_time": {
            "type": [
              "string",
              "null"
            ]
          },
          "overnight_rest": {
            "type": "boolean"
          },
          "rest_time": {
            "type": "string"
          },
          "start_time": {
            "type": "string"
          }
        }
      },
      "ErrorBody": {
        "type": "object",
        "required": [
          "message",
          "error_code",
          "status"
        ],
        "properties": {
          "content": {},
          "error_code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "minimum": 0
          }
        }
      },
      "LoginDriverRequest": {
        "type": "object",
        "required": [
          "email",
          "password"
        ],
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "PaginatedResponse_Workday": {
        "type": "object",
        "required": [
          "data",
          "total",
          "page"
        ],
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "date",
                "start_time",
                "rest_time",
                "overnight_rest"
              ],
              "properties": {
                "date": {
                  "type": "string",
                  "format": "date"
                },
                "end_time": {
                  "type": [
                    "string",
                    "null"
                  ]
                },
                "overnight_rest": {
                  "type": "boolean"
                },
                "rest_time": {
                  "type": "string"
                },
                "start_time": {
                  "type": "string"
                }
              }
            }
          },
          "page": {
            "type": "integer",
            "format": "int32",
            "minimum": 0
          },
          "total": {
            "type": "integer",
            "format": "int32",
            "minimum": 0
          }
        }
      },
      "UpdateWorkdayRequest": {
        "type": "object",
        "required": [
          "date",
          "start_time",
          "rest_time",
          "overnight_rest"
        ],
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "end_time": {
            "type": [
              "string",
              "null"
            ]
          },
          "overnight_rest": {
            "type": "boolean"
          },
          "rest_time": {
            "type": "string"
          },
          "start_time": {
            "type": "string"
          }
        }
      },
      "Workday": {
        "type": "object",
        "required": [
          "date",
          "start_time",
          "rest_time",
          "overnight_rest"
        ],
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "end_time": {
            "type": [
              "string",
              "null"
            ]
          },
          "overnight_rest": {
            "type": "boolean"
          },
          "rest_time": {
            "type": "string"
          },
          "start_time": {
            "type": "string"
          }
        }
      }
    }
  }
}